<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.taewonkim.android.materialanimationcalculator.MainActivity"
    android:gravity="center">

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="0"
        android:id="@+id/num0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/num2"
        android:layout_alignEnd="@+id/num2"
        android:textSize="50dp"
        android:elevation="10dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:id="@+id/un"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/num0"
        android:textSize="50dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="="
        android:id="@+id/btnAns"
        android:layout_alignTop="@+id/un"
        android:layout_toRightOf="@+id/un"
        android:textSize="30dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:id="@+id/num1"
        android:layout_above="@+id/num0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="50dp"
        android:elevation="10dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:id="@+id/num2"
        android:layout_alignBottom="@+id/num1"
        android:layout_toRightOf="@+id/num1"
        android:layout_toEndOf="@+id/num1"
        android:textSize="50dp"
        android:elevation="10dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:id="@+id/num3"
        android:layout_alignBottom="@+id/num1"
        android:layout_alignLeft="@+id/un"
        android:textSize="50dp"
        android:elevation="10dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        android:id="@+id/btnPlus"
        android:layout_above="@+id/un"
        android:layout_toRightOf="@+id/un"
        android:textSize="30dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:id="@+id/num4"
        android:layout_above="@+id/num1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="50dp"
        android:elevation="10dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:id="@+id/num5"
        android:layout_above="@+id/num1"
        android:layout_toRightOf="@+id/num4"
        android:layout_toEndOf="@+id/num4"
        android:textSize="50dp"
        android:elevation="10dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:id="@+id/num6"
        android:layout_above="@+id/num3"
        android:layout_alignLeft="@+id/num3"
        android:layout_alignStart="@+id/num3"
        android:textSize="50dp"
        android:elevation="10dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:id="@+id/btnMinus"
        android:layout_above="@+id/btnPlus"
        android:layout_toRightOf="@+id/num3"
        android:layout_toEndOf="@+id/num3"
        android:textSize="30dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:id="@+id/num7"
        android:layout_above="@+id/num4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="50dp"
        android:elevation="10dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:id="@+id/num8"
        android:layout_above="@+id/num4"
        android:layout_toRightOf="@+id/num4"
        android:layout_toEndOf="@+id/num4"
        android:textSize="50dp"
        android:elevation="10dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:id="@+id/num9"
        android:layout_alignBottom="@+id/num8"
        android:layout_alignLeft="@+id/num6"
        android:layout_alignStart="@+id/num6"
        android:textSize="50dp"
        android:elevation="10dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="*"
        android:id="@+id/btnMulti"
        android:layout_alignBottom="@+id/num9"
        android:layout_toRightOf="@+id/num9"
        android:layout_toEndOf="@+id/num9"
        android:textSize="30dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="AC"
        android:id="@+id/btnClear"
        android:layout_above="@+id/num7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+/-"
        android:id="@+id/btnConvert"
        android:layout_above="@+id/num7"
        android:layout_toRightOf="@+id/num7"
        android:layout_toEndOf="@+id/num7"
        android:textSize="30dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="%"
        android:id="@+id/btnPercent"
        android:layout_above="@+id/num9"
        android:layout_alignLeft="@+id/num9"
        android:layout_alignStart="@+id/num9"
        android:textSize="30dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="/"
        android:id="@+id/btnDiv"
        android:layout_above="@+id/num9"
        android:layout_toRightOf="@+id/btnPercent"
        android:layout_toEndOf="@+id/btnPercent"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnDiv"
        android:layout_alignEnd="@+id/btnDiv"
        android:layout_above="@+id/btnClear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="0"
        android:gravity="right"
        android:textSize="50dp" />

</RelativeLayout>
