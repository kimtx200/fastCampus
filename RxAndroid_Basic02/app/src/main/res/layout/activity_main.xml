<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.taewonkim.android.rxandroid_basic02.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:id="@+id/textView"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true" />

    <Button
        android:text="JUST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnJust" />

    <Button
        android:text="From"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFrom"
        android:layout_alignBaseline="@+id/btnJust"
        android:layout_alignBottom="@+id/btnJust"
        android:layout_toRightOf="@+id/btnJust"
        android:layout_toEndOf="@+id/btnJust" />

    <Button
        android:text="Defer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDefer"
        android:layout_alignBaseline="@+id/btnFrom"
        android:layout_alignBottom="@+id/btnFrom"
        android:layout_toRightOf="@+id/btnFrom"
        android:layout_toEndOf="@+id/btnFrom" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnJust"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:id="@+id/listView" />
</RelativeLayout>
