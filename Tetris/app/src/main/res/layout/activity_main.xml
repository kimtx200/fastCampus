<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taewonkim.android.tetris.MainActivity">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/frameLayout"
        android:layout_toLeftOf="@+id/blockList"
        android:layout_toStartOf="@+id/blockList">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEFT"
            android:id="@+id/btnLeft"
            android:layout_gravity="left|bottom" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Down"
            android:id="@+id/btnDown"
            android:layout_gravity="center_horizontal|bottom" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RIGHT"
            android:id="@+id/btnRight"
            android:layout_gravity="right|bottom" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UP"
            android:id="@+id/btnUp"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="ROTATE"
        android:id="@+id/btnRotate"
        android:layout_alignTop="@+id/frameLayout"
        android:layout_toRightOf="@+id/frameLayout"
        android:layout_toEndOf="@+id/frameLayout"
        android:layout_margin="10dp" />

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/frameLayout"
        android:id="@+id/ground"
        android:layout_margin="5dp"></FrameLayout>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ground"
        android:layout_toEndOf="@+id/ground"
        android:id="@+id/nextBlock"
        android:layout_margin="10dp"></FrameLayout>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/nextBlock"
        android:layout_toRightOf="@+id/ground"
        android:layout_toEndOf="@+id/ground"
        android:layout_above="@+id/frameLayout"
        android:id="@+id/blockList"
        android:layout_margin="10dp"></FrameLayout>
</RelativeLayout>
